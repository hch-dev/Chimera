{
  "manifest_version": 3,
  "name": "Chimera: Phishing detection and prevention",
  "version": "1.0",
  "description": "Detect phishing emails and URLs using a GAN-based AI model.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon128.png"
  },
  "options_page": "options/options.html",
  "background": {
    "service_worker": "background/service_worker.js",
    "type": "module" 
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": [
    "contextMenus",
    "activeTab",
    "tabs",
    "storage",
    "scripting",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}